@page
@model UpdateApiSecretsModel
@{
    ViewData["Title"] = "Update Api Secrets";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ApiKey"></label>
                <input asp-for="Input.ApiKey" class="form-control" />
                <span asp-validation-for="Input.ApiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AppSecret"></label>
                <input asp-for="Input.AppSecret" class="form-control" />
                <span asp-validation-for="Input.AppSecret" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update Api Secrets</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}